<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AZRelativeGridStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="AZGridFWeekItemCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">@color/weatherTextColor</item>
        <item name="android:textSize">@dimen/gridWeekTextSize</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="AZGridFImageIconCommon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:maxHeight">28dp</item>
        <item name="android:maxWidth">28dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="AZGridTempeTextCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/weatherTextColor</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="AZMainFirstSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/settingBackTextColor</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="AZMainFirstLineDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@android:color/black</item>
    </style>
    <style name="AZMainSettingTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="mainLivingTextStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="TwoFragmentTextTemp">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>